@using NgocNhanShop.Business.Common.Dtos
@model PageResult<NgocNhanShop.Business.System.Dtos.UserViewModel>
@{
    ViewData["Title"] = "Danh sách người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3><i class="fas fa-angle-double-right"></i> Danh sách người dùng</h3>

<p>
    <a class="btn btn-primary" asp-action="Create" asp-controller="User"><i class="fas fa-plus-circle"></i> Tạo mới người dùng</a>
</p>
<div id="divMessage" class="col-md-12">
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.Message
        </div>
    }

</div>
<table class="table table-striped table-hover table-bordered table-ngoc-nhan-shop">
    <thead>
        <tr>
            <th>Họ tên</th>
            <th>Số điện thoại</th>
            <th>Tài khoản</th>
            <th>Email</th>
            <th>Ngày sinh</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)  @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDay)
                    </td>
                    <td class="text-center">
                        <a href="@Url.Action("Edit", "User", new { id = item.Id })" title="sửa"><i class="fas fa-edit"></i></a>
                        <a href="@Url.Action("Detail", "User", new { id = item.Id })" title="xem chi tiết"><i class="fas fa-search"></i></a>
                        <a href="@Url.Action("Delete", "User", new { id = item.Id })" title="xóa"><i class="far fa-trash-alt" style="color:red;"></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
@await Component.InvokeAsync("Pager", Model)



